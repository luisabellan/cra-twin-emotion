{
  "name": "cra-twin-emotion",
  "version": "0.1.0",
  "description": "Starter that comes with CRA, Tailwind, Emotion, Twin, pre-commit, prettier, husky, craco and ESLint",
  "bin": {
    "create-boilerplate": "./bin/create-app.js"
  },
  "keywords": [
    "cra",
    "create-react-app",
    "twin",
    "tailwind",
    "tailwindcss",
    "emotion",
    "pre-commit",
    "husky",
    "lint-staged",
    "prettier",
    "eslint"
  ],
  "author": "Luis Abellan",
  "license": "MIT",
  "homepage": "https://github.com/luisabellan/cra-twin-emotion",
  "repository": {
    "type": "git",
    "url": "https://github.com/luisabellan/cra-twin-emotion.git"
  },
  "bugs": "https://github.com/luisabellan/cra-twin-emotion/issues",
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint:scss": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylelint 'src/**/*.scss' --syntax scss --fix",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{js,jsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,css,scss}'"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.15.8",
    "@craco/craco": "^5.9.0",
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/typography": "^0.4.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^7.2.1",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3",
    "rimraf": "^3.0.2",
    "tailwindcss-children": "^2.1.0",
    "twin.macro": "^2.8.0"
  },
  "devDependencies": {
    "autoprefixer": "^9",
    "babel-eslint": "^10.1.0",
    "babel-plugin-preval": "^5.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "lint-staged": "^10.5.4",
    "postcss": "^7",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babelMacros": {
    "twin": {
      "preset": "emotion"
    },
    "plugins": [
      "babel-plugin-macros",
      [
        "@emotion/babel-plugin-jsx-pragmatic",
        {
          "export": "jsx",
          "import": "__cssprop",
          "module": "@emotion/react"
        }
      ],
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "__cssprop",
          "pragmaFrag": "React.Fragment"
        }
      ]
    ],
    "config": "tailwind.config.js"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint . --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
